<Window x:Class="CharacterVisualizator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CharacterVisualizator"
        mc:Ignorable="d"
        Title="Visualizator" Height="350" Width="525">
    <Grid>
        <TabControl>
            <TabItem TabIndex="0" Header="Visualizator">
                <Canvas Name="VisualizatorCanvas" Loaded="VisualizatorCanvas_Loaded">
                    <Canvas.LayoutTransform>
                        <ScaleTransform ScaleX="2" ScaleY="2" CenterX=".5" CenterY=".5" />
                    </Canvas.LayoutTransform>
                </Canvas>
            </TabItem>
            <TabItem  TabIndex="1" Header="Test">

            </TabItem>
        </TabControl>
    </Grid>
</Window>
